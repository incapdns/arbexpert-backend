{
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Rust Binary",
      "program": "${workspaceFolder}/target/debug/arbexpert.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "sourceLanguages": [
        "rust"
      ],
      "initCommands": [
        "settings set target.max-children-count 0",
        "settings set target.prefer-dynamic-value no-dynamic-values",
        "settings set target.display-recognized-arguments false",
        "settings set stop-disassembly-display never"
      ],
      "cargo": {
        "args": [
          "build"
        ]
      }
    }
  ]
}